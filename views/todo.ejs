<ul>
    <% todos.forEach(function(todo) { %>
        <li>
            <%= todo.name %>
        </li>
        <li>
            <%= todo.done %>
        </li>
        <!-- <li> -->
        <form action="/flipTodo" method="POST">
            <input type="hidden" name="task" value="<%= todo.name %>" />
            <input type="submit" value="Flip" />
        </form>
        <!-- </li> -->
        <!-- <li> -->
        <form action="/deleteTodo" method="POST">
            <input type="hidden" name="task" value="<%= todo.name %>" />
            <input type="submit" value="Delete" />
        </form>
        <!-- </li> -->
        <% }) %>
</ul>

<form action="/addNewTodo" method="POST">
    <input type="text" name="task" placeholder="Task" id="task" />
    <input type="submit" value="Add" />
</form>